<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/weeklyTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/week_text" />

    <TextView
        android:id="@+id/weeklyTotalDisplay"
        android:background="@color/black"
        android:textColor="@color/white"
        android:textIsSelectable="false"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/weeklyTotalText"
        android:layout_below="@+id/weeklyTotalText" />

    <CalendarView
        android:id="@+id/calendarView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/weeklyTotalDisplay" />

    <TextView
        android:id="@+id/monthlyTotalText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/weeklyTotalText"
        android:layout_alignBottom="@+id/weeklyTotalText"
        android:layout_marginLeft="44dp"
        android:layout_toRightOf="@+id/weeklyTotalDisplay"
        android:text="@string/month_text" />

    <TextView
        android:id="@+id/monthlyTotalDisplay"
        android:background="@color/black"
        android:textColor="@color/white"  
        android:textIsSelectable="false" 
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/monthlyTotalText"
        android:layout_below="@+id/monthlyTotalText" />
    

</RelativeLayout>